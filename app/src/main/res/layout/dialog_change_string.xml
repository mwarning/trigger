<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="?android:windowBackground"
    >

    <TextView
        android:id="@+id/ChangeStringTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/StringEditText"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:textSize="23sp"
        android:textColor="?android:textColorPrimary" />

    <EditText
        android:id="@+id/StringEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ChangeStringTextView"
        app:layout_constraintBottom_toTopOf="@+id/CancelButton"
        android:layout_marginTop="10dp"
        android:layout_marginStart="@dimen/padding_20"
        android:layout_marginEnd="@dimen/padding_20"
        android:textSize="23sp"
        android:inputType="text"
        android:text=""
        android:maxLines="1"
        android:scrollHorizontally="true"
        android:textColor="?android:textColorPrimary" />

    <Button
        android:id="@+id/OkButton"
        android:layout_width="125dp"
        android:layout_height="@dimen/padding_50"
        android:layout_marginStart="@dimen/padding_50"
        android:layout_marginTop="@dimen/padding_20"
        app:layout_constraintTop_toBottomOf="@+id/StringEditText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/CancelButton"
        android:text="@string/button_ok" />

    <Button
        android:id="@+id/CancelButton"
        android:layout_width="125dp"
        android:layout_height="@dimen/padding_50"
        android:layout_marginStart="@dimen/padding_50"
        android:layout_marginEnd="@dimen/padding_50"
        android:layout_marginTop="@dimen/padding_20"
        app:layout_constraintTop_toBottomOf="@+id/StringEditText"
        app:layout_constraintStart_toEndOf="@+id/OkButton"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="@string/button_cancel" />

</androidx.constraintlayout.widget.ConstraintLayout>
